- formUrl = sd.REDIRECT_TO ? '/me/sign_in?redirect-to=' + sd.REDIRECT_TO : '/me/sign_in'

include ./header

form.Auth__form( action= formUrl method='POST' )
  .Fieldset
    input.Input(
      name='email'
      type='email'
      placeholder='Email'
      required
      autofocus
    )

    input.Input(
      name='password'
      type='password'
      placeholder='Password'
      autocomplete='on'
      required
    )

