.AuthHeader
  text-align center
  margin 2em auto

  &__logo
    > svg
      width 2em
      height 100%

  &__nav
    margin 1em auto
    font-size font-size-base
    line-height line-height-base
    font-weight bold

    > a
      color colors-gray-light

      &[data-active]
        color colors-gray-text

.Auth
  position absolute
  width 100%
  height 100%
  display flex
  align-items center
  flex-direction column
  justify-content center

  > form
    width (block_width)
    margin 0 auto

