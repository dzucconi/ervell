.AuthHeader
  collapsed-margins(1em)

  &__logo
    collapsed-margins(1em)
    position relative
    display block
    width 2em
    height 1em

    > svg
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      fill colors-gray-text

    &:hover > svg
      fill colors-gray-hover

  &__nav
    collapsed-margins(1em)

    > a
    > span
      display inline-block
      padding 1em 0.5em
      font-weight bold

    > a
      color colors-gray-light

      &:hover
        color colors-gray-hover
