extends ../../../components/layout/layouts/blank

block container
  .Auth
    include header

    form.AuthForm( method='POST' )
      .Fieldset
        input.Input(
          id='password'
          name='password'
          type='password'
          placeholder='Password (at least 6 characters)'
          pattern='.{6,}'
          required
        )

        input.Input(
          id='password_confirmation'
          type='password'
          name='password_confirmation'
          placeholder='Confirm password (at least 6 characters)'
          pattern='.{6,}'
          required
        )

      button.Button.Button--divider
        | Reset password

block scripts
  script( src= asset('/assets/auth.js') )
